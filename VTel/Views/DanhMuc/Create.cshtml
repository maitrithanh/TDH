@model VTel.Models.DANHMUC

@{
    ViewBag.Title = "Thêm Danh Mục - Quản Lý Danh Mục";
    Layout = "~/Views/Shared/_LayoutPageManagement.cshtml";
}

<link href="~/Content/css/Product/create.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal box-add">
        <h4>Danh Mục</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row" style="padding: 50px;">
            <div class="form-group col-md-6">
                <h4 class="hint-name">Mã Danh Mục @Html.ValidationMessageFor(model => model.MADANHMUC)</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MADANHMUC, new { htmlAttributes = new { placeholder = "Mã Danh Mục", @class = "data-input" } })
                    @Html.ValidationMessageFor(model => model.MADANHMUC, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <h4 class="hint-name">Tên Danh Mục @Html.ValidationMessageFor(model => model.TENDANHMUC)</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENDANHMUC, new { htmlAttributes = new { placeholder = "Mã Danh Mục", @class = "data-input" } })
                    @Html.ValidationMessageFor(model => model.TENDANHMUC, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-success create-all" value="Thêm" />
        </div>
    </div>
}

<div class="btn btn-primary back">
    @Html.ActionLink("Quay Lại", "QuanLyDanhMuc", "Management")
</div>
