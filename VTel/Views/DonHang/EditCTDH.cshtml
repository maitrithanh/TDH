@model VTel.Models.CHITIETDONHANG

@{
    ViewBag.Title = "Chi Tiết Đơn Hàng";
    ViewBag.Current = "QuanLyDonHang";
    Layout = "~/Views/Shared/_LayoutPageManagement.cshtml";
}

@*///////*@
<link href="~/Content/css/Product/create.css" rel="stylesheet" />


@using (Html.BeginForm("EditCTDH", "DonHang"))
{
    @Html.AntiForgeryToken()
    <div class="box-add">
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">
                    <h4 class="text-ce">Thông Tin Chi Tiết Đơn Hàng</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IDCHITIETDONHANG)
                    <div class="row">
                        <div class="col-md-9" style="display: block;">

                            <div class="form-group">
                                <h4 class="hint-name">Số Lượng</h4>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { placeholder = "Số Lượng", @class = "data-input data-input-weight" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <h4 class="hint-name">Đơn Giá</h4>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DONGIA, new { htmlAttributes = new { placeholder = "Đơn Giá", @class = "data-input data-input-weight" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <h4 class="hint-name">Thành Tiền</h4>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.THANHTIEN, new { htmlAttributes = new { placeholder = "Thành Tiền", @class = "data-input data-input-weight" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <h4 class="hint-name">ID Đơn Hàng @Html.ValidationMessageFor(model => model.IDDH)</h4>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.IDDH, new { htmlAttributes = new { placeholder = "ID Đơn Hàng", @class = "data-input data-input-weight" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <h4 class="hint-name">ID Sản Phẩm @Html.ValidationMessageFor(model => model.PRODUCTID)</h4>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.PRODUCTID, new { htmlAttributes = new { placeholder = "ID Sản Phẩm", @class = "data-input data-input-weight" } })
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <input type="submit" class="btn btn-success create-all" value="Lưu" />
    </div>
}

<div class="btn btn-primary back">
    @Html.ActionLink("Quay Lại", "QuanLyDonHang", "Management")
</div>
