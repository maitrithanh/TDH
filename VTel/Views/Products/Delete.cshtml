@model VTel.Models.SANPHAM

@{
    ViewBag.Title = "Xoá Sản Phẩm - Quản Lý Sản Phẩm";
    ViewBag.Current = "QuanLySanPham";
    Layout = "~/Views/Shared/_LayoutPageManagement.cshtml";
}

<link href="~/Content/css/Product/create.css" rel="stylesheet" />

@using (Html.BeginForm("Delete", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    if (ViewBag.ErrorProductCreate != null)
    {
        <p class="LoginError">
            @ViewBag.ErrorProductCreate
        </p>
    }
    <div class="box-add">
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">
                    <h4 class="text-ce">Thông Tin Sản Phẩm</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-9" style="display: block;">
                            <div class="form-group">
                                <h4 class="hint-name">Tên Sản Phẩm @Html.ValidationMessageFor(model => model.TENSP)</h4>
                                <div class="col-md-10">
                                    <p class="delete-box">@Html.DisplayFor(model => model.TENSP)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <h4 class="hint-name">Mô Tả @Html.ValidationMessageFor(model => model.MOTASP)</h4>
                                <div class="col-md-10">
                                    <p class="delete-box">@Html.DisplayFor(model => model.MOTASP)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <h4 class="hint-name">Hình Ảnh @Html.ValidationMessageFor(model => model.HINHANHSP)</h4>
                                <div class="col-md-10">
                                    <img src="@Url.Content(Model.HINHANHSP)" class="img-create" alt="Xoá Sản Phẩm" id="previewImg" />
                                </div>
                            </div>

                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <h4 class="hint-name">Ghi Chú </h4>
                                <div class="col-md-10">
                                    <p class="delete-box">@Html.DisplayFor(model => model.GIASP)</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <h4 class="hint-name">Giá Bán @Html.ValidationMessageFor(model => model.GIASP)</h4>
                                <div class="col-md-10">
                                    <p class="delete-box">
                                        @Convert.ToDecimal(Model.GIASP).ToString("N0")₫
                                    </p>
                                </div>
                            </div>

                            <div class="form-group">
                                <h4 class="hint-name">Danh Mục</h4>
                                <div class="col-md-10">
                                    <p class="delete-box">@Html.DisplayFor(model => model.DANHMUC.TENDANHMUC)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <input type="button" class="btn btn-danger create-all" data-toggle="modal" data-target="#myModal" value="Xoá" />


        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" style="float:left;">Xoá Sản Phẩm</h4>
                    </div>
                    <div class="modal-body">
                        <p>Bạn Chắc Chắn Xoá?</p>
                        <p class="text-danger">
                            @Html.DisplayFor(model => model.TENSP)
                        </p>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Xoá" class="btn btn-danger" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Huỷ</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="btn btn-primary back">
    @Html.ActionLink("Quay Lại", "QuanLySanPham", "Management")
</div>
