@model VTel.Models.SANPHAM

@{
    ViewBag.Title = "Chỉnh Sửa - Quản Lý Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutPageManagement.cshtml";
}

<script src="~/Scripts/script.js"></script>
<link href="~/Content/css/Product/create.css" rel="stylesheet" />

@using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PRODUCTID)

        @*//*@
    <div class="box-add">
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">
                    <h4 class="text-ce">Thông Tin Sản Phẩm</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-9" style="display: block;">
                            <div class="form-group">
                                <h4 class="hint-name">Tên Sản Phẩm @Html.ValidationMessageFor(model => model.TENSP)</h4>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { placeholder = "Tên Sản Phẩm", @class = "data-input data-input-weight" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <h4 class="hint-name">Mô Tả @Html.ValidationMessageFor(model => model.MOTASP)</h4>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.MOTASP, new { htmlAttributes = new { placeholder = "Mô Tả", @class = "data-input data-input-weight data-input-height" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <h4 class="hint-name">Số Lượng </h4>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { placeholder = "Số Lượng", @class = "data-input" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <h4 class="hint-name">Giá Bán @Html.ValidationMessageFor(model => model.GIASP)</h4>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.GIASP, new { htmlAttributes = new { placeholder = "Giá Bán", @class = "data-input" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <h4 class="hint-name">Danh Mục</h4>
                                <div class="col-md-10">
                                    @{Html.RenderAction("SelectDanhMuc", "Products");}
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-12">
                <h4>Hình Ảnh</h4>
                <hr />
                <img src="@Url.Content(Model.HINHANHSP)" class="img-create" alt="Thêm Sản Phẩm" id="previewImg" />
                <input type="file" style="display: inline;" name="UploadImage" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
            </div>
        </div>
        <input type="button" class="btn btn-success create-all" data-toggle="modal" data-target="#myModal" value="Lưu" />


        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" style="float:left;">Chỉnh Sửa Sản Phẩm</h4>
                    </div>
                    <div class="modal-body">
                        <p>Bạn Chắc Chắn Chỉnh Sửa?</p>
                        <p class="text-success">
                            @Html.DisplayFor(model => model.TENSP)
                        </p>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Lưu" class="btn btn-success" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Huỷ</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
        @*//*@

    </div>
}

<div class="btn btn-primary back">
    @Html.ActionLink("Quay Lại", "QuanLySanPham", "Management")
</div>
