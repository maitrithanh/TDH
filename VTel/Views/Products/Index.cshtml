@*@model IEnumerable<VTel.Models.SANPHAM>*@
@using VTel.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SANPHAM>

@{
    ViewBag.Title = "San Pham";
    ViewBag.Current = "SanPham";
}

<link href="~/Content/css/Product/products-main.css" rel="stylesheet" />
<link href="~/Content/css/Product/products-list.css" rel="stylesheet" />

<!-- slide -->
<div class="container p-4" style="margin-top: 20px;">
    <div class="row">
        <div class="col-md-4">
            <div class="navbar-sec d-none d-md-block" style=" height: 366px; overflow: auto;">
                <ul class="list-menu p-2">
                    <li>
                        @{Html.RenderAction("DanhMucPartial", "DanhMuc");}
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-8">
            <div class="slider">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="https://theme.hstatic.net/1000026716/1000440777/14/slideshow_1.jpg" alt="">
                        </div>

                        <div class="item">
                            <img src="https://theme.hstatic.net/1000026716/1000440777/14/slideshow_10.jpg" alt="">
                        </div>

                        <div class="item">
                            <img src="https://theme.hstatic.net/1000026716/1000440777/14/slideshow_2.jpg" alt="">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end slide -->
<!-- content -->
<!-- section hot products -->

<div class="content container p-4">
    <div class="p-2" style="display: inline-block;">
        <p style="display: inline-block;">
            <a href="/Products/SearchOption" class="btn btn-danger">Tìm kiếm theo giá</a>
            <a href="/OrderDetail/GroupByTop5" class="btn btn-danger">Top 5 Sản Phẩm Bán Chạy Nhất</a>
            <div style="display: inline-block; margin-left: 449px;">
                @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                {
                    <div class="form-group" style="display: inline-block;">
                        <input type="Text" class="form-control mx-sm-3" style="display: inline-block; width: 67%;" value="@ViewBag.Keyword" name="timkiem" placeholder="Nhập Từ Khoá...">
                        <input type="submit" class="btn btn-danger" value="Tìm Kiếm">
                    </div>
                }
            </div>

        </p>
    </div>
    <h6 class="section-title h1 text-left">
        <img src="https://cdn-icons-png.flaticon.com/128/3275/3275168.png" width="50" alt="hot">
        Gợi Ý Hôm Nay
    </h6>
    <!-- section product hot 1 -->

    <div class="row">
        @foreach (var pro in Model)
        {
            <div class="col-md-3">
                <a href="@Url.Action("Details", "Products", new { id = pro.PRODUCTID })" class="products-link">
                    <div class="products-box container-fluid p-0">
                        <div class="product-box-heading">
                            <img src="@Url.Content(pro.HINHANHSP)" alt="@Html.DisplayFor(model => pro.TENSP)" class="product-img img-fluid">
                        </div>
                        <div class="product-box-body p-2">
                            <h5 class="product-title m-0">
                                <a href="@Url.Action("Details", "Products", new { id = pro.PRODUCTID })">@Html.DisplayFor(model => pro.TENSP)</a>
                            </h5>
                            <div class="row product-teacher-section p-0">
                                <div class="col-6 text-left custom-text-show">
                                    <p class="product-teacher m-0">@Html.DisplayFor(model => pro.MOTASP)</p>
                                </div>

                                <div class="col-6 text-right">
                                    <p class="sale m-0">
                                        @Convert.ToDecimal(pro.GIASP).ToString("N0") ₫
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 text-left m-0">
                                    <i class="fa fa-star text-warning" aria-hidden="true"></i>
                                    <i class="fa fa-star text-warning" aria-hidden="true"></i>
                                    <i class="fa fa-star text-warning" aria-hidden="true"></i>
                                    <i class="fa fa-star text-warning" aria-hidden="true"></i>
                                    <i class="fa fa-star text-warning" aria-hidden="true"></i>
                                    (100)
                                </div>

                                <div class="col-6 text-right">
                                    <p class="price m-0">
                                        @Convert.ToDecimal(pro.GIASP).ToString("N0")
                                        ₫
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
        <!--Card info-->
    </div>
    <div class="p-2" style="margin-top: 34px;">
        <style>
            .pagination > li:first-child > a {
                border: none;
            }

            .pagination > li > a {
                border: none;
                border-radius: 10%;
                margin: 5px;
                color: #067346;
                font-size: 18px;
                font-weight: 500;
            }

            .pagination > .active > a {
                background: #ea1c00;
            }

                .pagination > .active > a:hover {
                    background: #ea1c00;
                    opacity: 0.8;
                    cursor: pointer;
                    font-weight: 900;
                }

            .pagination > li:last-child > a {
                border-radius: 10%;
            }

            .pagination > li:first-child > a {
                border-radius: 10%;
            }
        </style>
        @*Trang @( Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount*@
        <div class="menu-page text-center">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
    </div>
</div>
<!-- end content -->
