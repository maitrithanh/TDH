@model VTel.Models.NHANVIEN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPageManagement.cshtml";
}

<link href="~/Content/css/Product/create.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="box-add">
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">
                    <h4 class="text-ce">Chi Tiết Nhân Viên</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-6" style="display: block;">
                            <div class="form-group">
                                <h4 class="hint-name">User ID @Html.ValidationMessageFor(model => model.USERID)</h4>
                                <div class="col-md-10">
                                    <p class="delete-box" style="width: 114% !important; height: 50px;">
                                        @Html.DisplayFor(model => model.USERID)
                                    </p>
                                </div>
                            </div>

                            <div class="form-group">
                                <h4 class="hint-name">Họ Tên @Html.ValidationMessageFor(model => model.HOTENNV)</h4>
                                <div class="col-md-10">
                                    <p class="delete-box" style="width: 114% !important; height: 50px;">
                                        @Html.DisplayFor(model => model.HOTENNV)
                                    </p>
                                </div>
                            </div>

                            <div class="form-group">
                                <h4 class="hint-name">Giới Tính @Html.ValidationMessageFor(model => model.GIOITINH)</h4>
                                <div class="col-md-10">
                                    <p class="delete-box" style="width: 114% !important; height: 50px;">
                                        @Html.DisplayFor(model => model.GIOITINH)
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <h4 class="hint-name">Ngày Sinh @Html.ValidationMessageFor(model => model.NGAYSINH)</h4>
                                <div class="col-md-10">
                                    <p class="delete-box" style="width: 114% !important; height: 50px;">
                                        @Html.DisplayFor(model => model.NGAYSINH)
                                    </p>
                                </div>
                            </div>

                            <div class="form-group">
                                <h4 class="hint-name">Địa Chỉ @Html.ValidationMessageFor(model => model.DIACHI)</h4>
                                <div class="col-md-10">
                                    <p class="delete-box" style="width: 114% !important; height: 50px;">
                                        @Html.DisplayFor(model => model.DIACHI)
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <h4 class="hint-name">Chức Vụ @Html.ValidationMessageFor(model => model.CHUCVU)</h4>
                                <div class="col-md-10">
                                    <p class="delete-box" style="width: 114% !important; height: 50px;">
                                        @Html.DisplayFor(model => model.CHUCVU1.TENCV)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <input type="button" class="btn btn-danger create-all" data-toggle="modal" data-target="#myModal" value="Xoá" />


        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" style="float:left;">Xoá Nhân Viên</h4>
                    </div>
                    <div class="modal-body">
                        <p>Bạn Chắc Chắn Xoá?</p>
                        <p class="text-danger">
                            @Html.DisplayFor(model => model.MANV)
                        </p>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Xoá" class="btn btn-danger" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Huỷ</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="btn btn-primary back">
    @Html.ActionLink("Quay Lại", "QuanLyNhanVien", "Management")
</div>

