@model VTel.Models.KHACHHANG

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/Product/create.css" rel="stylesheet" />

<div class="container">
    @using (Html.BeginForm("EditProfile", "Customers", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="box-add">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-horizontal">
                        <h4 class="text-ce">
                            <img src="~/Content/images/uservtel.png" alt="Hình Đại Diện" height="50" width="50" />

                            Thông Tin Tài Khoản
                        </h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-9" style="display: block;">
                                <div class="form-group">
                                    <h4 class="hint-name">ID @Html.ValidationMessageFor(model => model.Id)</h4>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { placeholder = "ID", @class = "data-input data-input-weight" } })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <h4 class="hint-name">Mã Khách Hàng @Html.ValidationMessageFor(model => model.MAKH)</h4>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.MAKH, new { htmlAttributes = new { placeholder = "Mã Khách Hàng", @class = "data-input data-input-weight" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <h4 class="hint-name">Họ Tên @Html.ValidationMessageFor(model => model.HOTENKH)</h4>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.HOTENKH, new { htmlAttributes = new { placeholder = "Họ Tên", @class = "data-input data-input-weight" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <h4 class="hint-name">Số Điện Thoại @Html.ValidationMessageFor(model => model.SDTKH)</h4>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SDTKH, new { htmlAttributes = new { placeholder = "Số Điện Thoại", @class = "data-input data-input-weight" } })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">

                                <div class="form-group">
                                    <h4 class="hint-name">Email @Html.ValidationMessageFor(model => model.EMAIL)</h4>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { placeholder = "Email", @class = "data-input data-input-weight" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <h4 class="hint-name">USERID @Html.ValidationMessageFor(model => model.USERID)</h4>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.USERID, new { htmlAttributes = new { placeholder = "User ID", @class = "data-input data-input-weight" } })
                                    </div>
                                </div>
                                
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <input type="button" class="btn btn-success create-all" data-toggle="modal" data-target="#myModal" value="Lưu" />


            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" style="float:left;">Chỉnh Sửa Thông Tin</h4>
                        </div>
                        <div class="modal-body">
                            <p>Bạn Chắc Chắn Chỉnh Sửa Thôn Tin?</p>
                            <p class="text-success">
                                @Html.DisplayFor(model => model.HOTENKH)
                            </p>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Lưu" class="btn btn-success" />
                            <button type="button" class="btn btn-default" data-dismiss="modal">Huỷ</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


